}

model contactinfo{
  id Int @id @default(autoincrement())
  mobileNumber String
  profileImage String
  address String
  // users users @relation(fields: [userId], references: [id])
  // userId Int
}

model orders{
  id Int @id @default(autoincrement())
  orderNumber String
  orderDate DateTime
  orderStatus String
  orderTotal Float
  qty Int
  // users users @relation(fields: [userId], references: [id])
  // userId Int
}

model plans{
  id Int @id @default(autoincrement())
  planName String
  planPrice Float
  planDuration String
}

